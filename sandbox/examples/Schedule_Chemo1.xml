<?xml version="1.0" encoding="UTF-8"?>
<!-- Give medication X on day 4 for a span of three days three times per day and on day 15 for a span of one day 
    twice a day within a 27 day cycle. Repeat the cycle 5 times with a week interval between each cycle. -->
<Cycle xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="urn:hl7-org:vmr:r2 ../../sandbox/schemata/vmr/vmr.xsd"
 xmlns="urn:hl7-org:vmr:r2">
    <cycleLength value='27' unit='d'/>
    <cycleRepeatCount value='5'/>
    <cycleLagTime value='7' unit='d'/>
    <cycleTiming>
        <pointInCycle value='4' unit='d'/>
        <span value='3' unit='d'/>
        <repeat xsi:type='RepeatAsInterval'>
            <frequency value='3'/>
            <duration value='24' unit='h'/>
            <intervalIsImportant value='true'/>
        </repeat>
    </cycleTiming>
    <cycleTiming>
        <pointInCycle value='15' unit='d'/>
        <span value='1' unit='d'/>
        <repeat  xsi:type='RepeatAsInterval'>
            <frequency value='2'/>
            <duration value='24' unit='h'/>
            <intervalIsImportant value='true'/>
        </repeat>
    </cycleTiming>
</Cycle>
